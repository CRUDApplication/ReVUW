<link rel="stylesheet" href="/styles/navbar.css" />

<nav class="navbar border-bottom border-body" data-bs-theme="dark">
    <div class="container">
        <div class="row align-item-center justify-content-between p-2">
            <div id="title" class="col-8 text-left my-auto"><a href="/">ReVUW</a></div>
            <div class="col-4 text-end my-auto text-white">
                <% if (user) { %>
                    <div class="d-flex justify-content-end align-items-center">
                        
                        <a href="/auth/profile" class="d-flex profile-name" style="text-decoration: none;">
                            <p class="profile-icon" style="margin: 0 !important; text-decoration: none !important;">
                                <% if (user.username) { %>
                                    <%= user.username %>
                                <%} else { %>
                                    Unnamed User
                                <% } %> &nbsp;
                            </p>
                            <i class="profile-icon bi bi-person-fill"></i>
                        </a>
                        <span class="v-line"></span>
                        <form class="logout-form" action="/auth/logout" method="post">
                            <button type="submit" id="logout" class="status-button p-2">
                                Log Out &nbsp;
                            </button>
                        </form>
                    </div>
                <% } else { %>
                    <button id="signin" class="status-button p-2">
                        <a href="/auth/signin">Sign In &nbsp;</a>
                    </button>
                <% } %>
            </div>
        </div>
    </div>
</nav>