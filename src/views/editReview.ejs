<div class="container">
    <h2 class="mt-5">Edit Review for <%= courseCode %></h2>

    <!-- <form action="/courses/<%= courseCode %>/reviews/<%= review._id %>/edit" method="POST">
        <label for="rating">Course Rating:</label>
        <input class="form-group" type="number" name="rating" min="1" max="5" value="<%= review.rating %>" placeholder="(1-5)" required>
        <textarea class="form-group" name="reviewContent" required><%= review.content %></textarea>
        <button class="form-group" type="submit">Update Review</button>
